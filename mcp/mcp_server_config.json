{
  "mcpServers": {
    "lazygopher-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-it",
        "lazygopher:latest"
      ],
      "alwaysAllow": [
        "get_pull_request"
      ]
    },
    "lazygopher-source": {
      "command": "uv",
      "args": [
        "run",
        "main.py"
      ],
      "alwaysAllow": [
        "get_pull_request"
      ]
    }
  }
}